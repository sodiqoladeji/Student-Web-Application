@{
}
<h2 class="mb-4">Create Teacher</h2>

<form method="post" action="Create" class="card p-4 shadow-sm" style="max-width: 500px; margin: auto;">
    <div class="mb-3">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="mb-3">
        <label for="Name">Name</label>
        <input asp-for="Name" type="text" id="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label for="Email">Email</label>
        <input asp-for="Email" type="email" id="Email" name="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label for="Department">Department</label>
        <input asp-for="Department" id="Department" name="Department" class="form-control" />
        <span asp-validation-for="Department"></span>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

