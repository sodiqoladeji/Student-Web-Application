@using WebApplication1.ViewModels
@model StudentDetailViewModel;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<h2>Student Details</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>Date of Birth</th>
		<td>@Model.DateofBirth</td>
	</tr>
    <tr>
		<th>Gender</th>
		<td>@Model.Gender</td>
    </tr>
    <tr>
        <th>Country of Birth</th>
		<td>@Model.CountryofBirth</td>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Phone Number</th>
		<td>@Model.PhoneNumber</td>
	</tr>
    <tr>
		<th>Address</th>
		<td>@Model.Address</td>
	</tr>

    <tr>
        <th>Enrollment Date</th>
        <td>@Model.EnrolmentDate</td>
    </tr>
       
</table>

<h2 class="section-heading">Class Teacher</h2>
@if(Model.ClassTeacher != null)
{
    <div>
		Name: @Model.ClassTeacher.FirstName @Model.ClassTeacher.LastName

        Department: @Model.ClassTeacher.Department
    </div>
}

<h2 class="section-heading">Primary Course</h2>

<div>
    <strong>CourseID:</strong> @Model.PrimaryCourse.CourseID<br />
    <strong>CourseCode:</strong> @Model.PrimaryCourse.CourseCode<br />
    <strong>CourseDescription:</strong> @Model.PrimaryCourse.CourseDescription
</div>
        

<h2 class="section-heading">Optional Courses</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>CourseID</th>
            <th>CourseCode</th>
            <th>CourseDescription</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.OptionalCourses)
        {
            <tr>
                <td>@course.CourseID</td>
                <td>@course.CourseCode</td>
                <td>@course.CourseDescription</td>
            </tr>
        }
    </tbody>
</table>




       