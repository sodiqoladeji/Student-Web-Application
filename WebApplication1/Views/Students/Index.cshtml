@model List<WebApplication1.Models.StudentDetailViewModel>

<!--Generate html for rendering a list of students-->

<a class="btn btn-primary mb-3" asp-controller="Students" asp-action="Create">Create New.</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Enrollment Date</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.EnrolmentDate</td>
                <td> <a class="btn btn-primary mb-1" asp-controller="Students" asp-action="Details">Details</a> </td>

            </tr>
        } 
    </tbody>
</table>